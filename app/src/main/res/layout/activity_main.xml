<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Texto pasar"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Nombre"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="30dp"></EditText>

    <EditText
        android:id="@+id/txtApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Apellidos"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="30dp"></EditText>

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="TelÃ©fono"
        android:inputType="number"
        android:maxLength="9"
        android:maxLines="1"
        android:textSize="30dp"></EditText>

    <Button
        android:id="@+id/btnPasar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B1"
        android:textSize="50dp"></Button>

    <CheckBox
        android:id="@+id/checkPermitir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Permitir paso de datos"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:checked="false"></CheckBox>

</LinearLayout>